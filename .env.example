# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ats_resume?retryWrites=true&w=majority

# Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# JWT Secret
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Client Origin (for CORS)
CLIENT_ORIGIN=http://localhost:5173

# Email Service Configuration
EMAIL_SERVICE=gmail  # or leave blank for custom SMTP
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password  # Use Gmail App Password, not regular password
CLIENT_URL=http://localhost:5173  # Your frontend URL

# ==========================================
# SECURITY CONFIGURATION
# ==========================================

# Allowed Origins for CORS (comma-separated)
# Examples:
# - Development: http://localhost:5173,http://localhost:3000
# - Production: https://yourdomain.com,https://www.yourdomain.com
# - Wildcard: https://*.yourdomain.com (matches any subdomain)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ==========================================
# OAUTH AUTHENTICATION
# ==========================================

# Google OAuth
# Get credentials from: https://console.cloud.google.com/
# 1. Create new project
# 2. Enable Google+ API
# 3. Create OAuth 2.0 Client ID
# 4. Add authorized redirect URI: http://localhost:5000/api/auth/google/callback
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# GitHub OAuth
# Get credentials from: https://github.com/settings/developers
# 1. Click "New OAuth App"
# 2. Add callback URL: http://localhost:5000/api/auth/github/callback
GITHUB_CLIENT_ID=your-github-client-id-here
GITHUB_CLIENT_SECRET=your-github-client-secret-here

# Session Secret (for Passport.js)
# Generate a random string (e.g., openssl rand -base64 32)
SESSION_SECRET=your-random-session-secret-change-in-production

# Server URL (for OAuth callbacks)
SERVER_URL=http://localhost:5000

# ==========================================
# PRODUCTION NOTES
# ==========================================
# For production deployment:
# - Change all secrets to strong random strings
# - Use HTTPS URLs (https://your-domain.com)
# - Update OAuth callback URLs in provider settings
# - Set NODE_ENV=production

